{% extends '../layout.twig' %}

{% block body %}
	<div class="container my-4">
		<h1>{{ title }}</h1>
		<p>Welcome to {{ title }}</p>
		<div id="app">
		</div>
		<p>{{ mode }}</p>

		{# users table #}
		<table class="table table-hover my-3">
			<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">First Name</th>
				<th scope="col">Last Name</th>
				<th scope="col">Email</th>
				<th scope="col">Balance</th>
			</tr>
			</thead>
			<tbody>
			{% for u in users %}
				<tr>
					<th scope="row">{{ u.id }}</th>
					<td>{{ u.first_name }}</td>
					<td>{{ u.last_name }}</td>
					<td>{{ u.email }}</td>
					<td>{{ u.balance }}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>

	</div>

{% endblock %}
